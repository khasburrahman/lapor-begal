<!DOCTYPE html>
<html lang="en">

<%- include('../components/header', {title: "Register User"}) %>

<body>
  <%- include('../components/navbar') %>
  <h1 class="formHeader">Edit Report</h1>
  <form id="registerUser" action="/reports/<%= report.id %>/edit" method="POST">
    <div class="form-group">
      <input list="locationDataList" hidden id='form-location' class="form-control" name="nama">
    </div>
    <div class="form-group">
      <label for="koordinat">Lokasi:</label>
      <input list="locationDataList" class="form-control" name="koordinat" value="<%= report.Location.koordinat%>">
    </div>
    <div class="form-group">
      <label for="deskripsi">Description</label>
      <textarea class="form-control" name="deskripsi" rows="5" id="deskripsi"><%= report.deskripsi%></textarea>
    </div>
    <div class="form-group">
      <label for="foto">Upload Photo</label>
      <input type="file" class="form-control" name="foto" id="fotoUserInput" placeholder="Browse Photo">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <%- include('../components/script') %>
</body>

</html>
