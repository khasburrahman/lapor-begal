<!DOCTYPE html>
<html lang="en">

<%- include('../components/header', {title: "Register User", map: true}) %>

<body>
  <%- include('../components/navbar') %>
  

  <h1 class="formHeader">Edit Report</h1>
  <form id="registerUser" action="/reports/<%= report.id %>/edit" method="POST">
    <%- include('../components/map_input', {
       disableControl: true,
       mapValues: [
        {
          coord: report.Location.koordinat,
          location: report.Location.name
        }
       ] 
      }) %>
    <div class="form-group">
      <input list="locationDataList" hidden id='form-location' class="form-control" name="nama">
    </div>
    <div class="form-group">
      <label for="koordinat">Lokasi:</label>
      <input readonly list="locationDataList" class="form-control" name="koordinat" value="<%= report.Location.koordinat%>">
    </div>
    <div class="form-group">
      <label for="deskripsi">Description</label>
      <textarea class="form-control" name="deskripsi" rows="5" id="deskripsi"><%= report.deskripsi%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <%- include('../components/script') %>
</body>

</html>
